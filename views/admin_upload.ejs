<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Upload Certificate | Admin</title>

  <!-- ADMIN CSS -->
  <link rel="stylesheet" href="/public/css/admin.css">

  <!-- FONT AWESOME -->
  <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>

<body class="admin-body">

<!-- ================= HEADER ================= -->
<header class="dashboard-header">
  <div class="dashboard-title">
    <i class="fa-solid fa-cloud-arrow-up" style="color:#7b2cff;"></i>
    Upload Certificate
  </div>

  <div class="dashboard-actions">
    <a href="/admin/dashboard" class="btn-upload">
      <i class="fa-solid fa-arrow-left"></i> Dashboard
    </a>

    <a href="/admin/logout" class="btn-logout">
      <i class="fa-solid fa-right-from-bracket"></i> Logout
    </a>
  </div>
</header>

<!-- ================= MAIN ================= -->
<div class="dashboard-container">

  <div class="table-card">

    <div class="table-header">
      <div class="table-title">
        Student Certificate Upload
      </div>
    </div>

    <div style="padding:22px;">

      <% if (error) { %>
        <div style="
          background:#fff0f0;
          color:#e03131;
          padding:12px 14px;
          border-radius:10px;
          margin-bottom:18px;
          font-size:14px;">
          <i class="fa-solid fa-circle-exclamation"></i>
          <%= error %>
        </div>
      <% } %>

      <form method="POST"
            action="/admin/upload"
            enctype="multipart/form-data"
            style="display:flex;flex-direction:column;gap:14px;">


            <!-- REG NO -->
        <label>Registration Number</label>
        <div class="admin-input-group">
          <i class="fa-solid fa-id-card"></i>
          <input type="text"
                 name="regNumber"
                 id="regNumberInput"
                 class="admin-input"
                 placeholder="REG12345"
                 required>
        </div>
        <!-- NAME -->
        <label>Student Name</label>
        <div class="admin-input-group">
          <i class="fa-solid fa-user"></i>
          <input type="text"
                 name="name"
                 id="nameInput"
                 class="admin-input"
                 placeholder="Full name"
                 required>
        </div>

        

        <!-- DOB -->
        <label>Date of Birth</label>
        <div class="admin-input-group">
          <i class="fa-solid fa-cake-candles"></i>
          <input type="date"
                 name="dob"
                 id="dobInput"
                 class="admin-input"
                 required>
        </div>

        <!-- EMAIL -->
        <label>Email</label>
        <div class="admin-input-group">
          <i class="fa-solid fa-envelope"></i>
          <input type="email"
                 name="email"
                 id="emailInput"
                 class="admin-input"
                 placeholder="student@example.com"
                 required>
        </div>

        <!-- FILE -->
        <label>Certificate File</label>
        <div class="admin-input-group">
          <i class="fa-solid fa-file"></i>
          <input type="file"
                 name="certificate"
                 class="admin-input"
                 accept=".pdf,.jpg,.jpeg,.png"
                 required>
        </div>

        <!-- SUBMIT -->
        <button type="submit"
                class="btn-upload"
                style="justify-content:center;margin-top:12px;">
          <i class="fa-solid fa-upload"></i>
          Upload Certificate
        </button>

      </form>

    </div>
  </div>

  <!-- FOOTER -->
  <div class="admin-footer">
    Â© 2025 Ganga Computer Center
  </div>

</div>

<script>
  const regInput = document.getElementById('regNumberInput');
  const nameInput = document.getElementById('nameInput');
  const dobInput = document.getElementById('dobInput');
  const emailInput = document.getElementById('emailInput');

  regInput.addEventListener('blur', async () => {
    const regNum = regInput.value.trim();
    if (!regNum) return;

    try {
      const res = await fetch(`/admin/get-student/${regNum}`);
      const data = await res.json();

      if (data.success) {
        if (data.data.name) nameInput.value = data.data.name;
        if (data.data.dob) dobInput.value = data.data.dob;
        if (data.data.email) emailInput.value = data.data.email;
      }
    } catch (err) {
      console.error("Error fetching student details:", err);
    }
  });
</script>

</body>
</html>
