<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Student Record</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- FONT AWESOME -->
  <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

  <style>
    body {
      font-family: 'Poppins', Arial, sans-serif;
      background: #f4f6fb;
      margin: 0;
      padding: 16px;
    }

    .card {
      max-width: 1000px;
      margin: auto;
      background: #fff;
      border-radius: 18px;
      padding: 22px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.08);
    }

    h1 {
      text-align: center;
      margin-bottom: 22px;
      color: #333;
    }

    .grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 22px;
    }

    .info p {
      margin: 10px 0;
      font-size: 15px;
      color: #444;
    }

    .btn {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      margin-top: 14px;
      background: #7b2cff;
      color: #fff;
      padding: 12px 18px;
      border-radius: 12px;
      text-decoration: none;
      font-weight: 600;
      transition: 0.3s;
    }

    .btn:hover {
      background: #6a00ff;
      box-shadow: 0 8px 20px rgba(123,44,255,0.35);
    }

    .preview {
      border: 1px solid #e5e7eb;
      border-radius: 14px;
      overflow: hidden;
      background: #fafafa;
    }

    iframe, img {
      width: 100%;
      height: 480px;
      border: none;
      object-fit: contain;
      background: #fff;
    }

    .no-file {
      padding: 30px;
      text-align: center;
      color: #777;
      font-size: 15px;
    }

    @media (max-width: 768px) {
      .grid {
        grid-template-columns: 1fr;
      }

      iframe, img {
        height: 360px;
      }
    }
  </style>
</head>

<body>

  <div class="card">
    <h1>Student Record</h1>

    <div class="grid">

      <!-- STUDENT INFO -->
      <div class="info">
        <p><strong>Name:</strong> <%= student.name %></p>
        <p><strong>Registration No:</strong> <%= student.regNumber %></p>
        <p><strong>Date of Birth:</strong> <%= student.dob %></p>
        <p><strong>Email:</strong> <%= student.email %></p>
        <p><strong>Uploaded:</strong> <%= student.uploadedAt || "-" %></p>

        <% if (student.certificatePath) { %>
          <a class="btn"
             href="/download/<%= student.certificatePath.split('/').pop() %>">
            <i class="fa-solid fa-download"></i>
            Download Certificate
          </a>
        <% } %>
      </div>

      <!-- CERTIFICATE PREVIEW -->
      <div class="preview">
        <% if (student.certificatePath && ext === '.pdf') { %>
          <iframe src="<%= student.certificatePath %>"></iframe>
        <% } else if (student.certificatePath) { %>
          <img src="<%= student.certificatePath %>" alt="Certificate">
        <% } else { %>
          <div class="no-file">
            No certificate available
          </div>
        <% } %>
      </div>

    </div>
  </div>

</body>
</html>
